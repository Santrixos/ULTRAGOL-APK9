<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="8dp"
    app:cardBackgroundColor="@color/colorToolbarDark"
    app:cardCornerRadius="12dp"
    app:cardElevation="4dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="16dp">

        <!-- Icono de la plataforma -->
        <ImageView
            android:id="@+id/iv_platform_icon"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:layout_gravity="center_vertical"
            android:layout_marginEnd="16dp"
            android:background="@color/colorAccent"
            android:padding="8dp"
            android:scaleType="centerInside"
            android:src="@android:drawable/ic_media_play"
            android:tint="@color/colorBlack" />

        <!-- InformaciÃ³n del streaming -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">

            <!-- InformaciÃ³n del partido -->
            <TextView
                android:id="@+id/tv_match_info"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Club AmÃ©rica vs Guadalajara"
                android:textColor="@color/colorAccent"
                android:textSize="12sp"
                android:textStyle="bold"
                android:layout_marginBottom="4dp" />

            <!-- Nombre del streamer -->
            <TextView
                android:id="@+id/tv_streamer_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Canal Deportivo"
                android:textColor="@color/colorWhite"
                android:textSize="16sp"
                android:textStyle="bold"
                android:layout_marginBottom="4dp" />

            <!-- Plataforma -->
            <TextView
                android:id="@+id/tv_platform_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="YouTube"
                android:textColor="@color/colorAccent"
                android:textSize="14sp"
                android:layout_marginBottom="4dp" />

            <!-- Fecha y hora -->
            <TextView
                android:id="@+id/tv_timestamp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="ðŸ“… 15/03/2024 14:30"
                android:textColor="@color/colorTextSecondary"
                android:textSize="12sp" />

        </LinearLayout>

        <!-- BotÃ³n para abrir link -->
        <ImageView
            android:id="@+id/btn_open_link"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_gravity="center_vertical"
            android:background="@color/colorAccent"
            android:padding="8dp"
            android:scaleType="centerInside"
            android:src="@android:drawable/ic_media_play"
            android:tint="@color/colorBlack"
            android:clickable="true"
            android:focusable="true"
            android:foreground="?attr/selectableItemBackgroundBorderless" />

    </LinearLayout>

</androidx.cardview.widget.CardView>