<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="4dp"
    android:background="@color/colorToolbarDark"
    android:orientation="horizontal"
    android:padding="8dp"
    android:gravity="center_vertical"
    android:foreground="?android:attr/selectableItemBackground">

    <!-- Icono de la plataforma -->
    <ImageView
        android:id="@+id/iv_platform_icon"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:src="@android:drawable/ic_media_play"
        android:tint="@color/colorAccent"
        android:layout_marginEnd="8dp" />

    <!-- Información del streamer -->
    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tv_streamer_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Nombre del Canal"
            android:textColor="@color/colorWhite"
            android:textSize="12sp"
            android:textStyle="bold"
            android:maxLines="1"
            android:ellipsize="end" />

        <TextView
            android:id="@+id/tv_platform_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="YouTube"
            android:textColor="@color/colorAccent"
            android:textSize="10sp"
            android:maxLines="1" />

    </LinearLayout>

    <!-- Botón de abrir link -->
    <ImageView
        android:id="@+id/iv_open_link"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:src="@android:drawable/ic_menu_send"
        android:tint="@color/colorAccent"
        android:layout_marginStart="8dp"
        android:background="?android:attr/selectableItemBackgroundBorderless"
        android:padding="2dp" />

</LinearLayout>