        </LinearLayout>

        <!-- URL de transmisiÃ³n -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="URL de TransmisiÃ³n:"
            android:textColor="@color/colorWhite"
            android:textSize="14sp"
