<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView 
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="6dp"
    app:cardBackgroundColor="@color/colorToolbarDark"
    app:cardCornerRadius="8dp"
    app:cardElevation="4dp"
    android:foreground="?android:attr/selectableItemBackground">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <!-- Equipos y VS -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center"
            android:layout_marginBottom="12dp">

            <!-- Equipo Local -->
            <TextView
                android:id="@+id/tv_equipo_local"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="2"
                android:text="Club América"
                android:textColor="@color/colorWhite"
                android:textSize="16sp"
                android:textStyle="bold"
                android:gravity="end"
                android:paddingEnd="8dp"
                android:maxLines="2"
                android:ellipsize="end" />

            <!-- VS -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/partido_vs"
                android:textColor="@color/colorAccent"
                android:textSize="18sp"
                android:textStyle="bold"
                android:layout_marginHorizontal="12dp"
                android:background="@color/colorPrimary"
                android:paddingHorizontal="8dp"
                android:paddingVertical="4dp"
                android:textColorLink="@color/colorBlack" />

            <!-- Equipo Visitante -->
            <TextView
                android:id="@+id/tv_equipo_visitante"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="2"
                android:text="Guadalajara"
                android:textColor="@color/colorWhite"
                android:textSize="16sp"
                android:textStyle="bold"
                android:gravity="start"
                android:paddingStart="8dp"
                android:maxLines="2"
                android:ellipsize="end" />

        </LinearLayout>

        <!-- Línea separadora -->
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/colorAccent"
            android:alpha="0.3"
            android:layout_marginBottom="12dp" />

        <!-- Información del partido -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center">

            <!-- Día -->
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical"
                android:gravity="center">

                <ImageView
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:src="@android:drawable/ic_menu_today"
                    android:tint="@color/colorAccent"
                    android:layout_marginBottom="4dp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/dia_partido"
                    android:textColor="@color/colorAccent"
                    android:textSize="10sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/tv_dia"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="SÁBADO"
                    android:textColor="@color/colorWhite"
                    android:textSize="12sp"
                    android:gravity="center"
                    android:maxLines="2" />

            </LinearLayout>

            <!-- Hora -->
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical"
                android:gravity="center">

                <ImageView
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:src="@android:drawable/ic_menu_recent_history"
                    android:tint="@color/colorAccent"
                    android:layout_marginBottom="4dp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/hora_partido"
                    android:textColor="@color/colorAccent"
                    android:textSize="10sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/tv_hora"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="19:00"
                    android:textColor="@color/colorWhite"
                    android:textSize="12sp"
                    android:gravity="center"
                    android:maxLines="2" />

            </LinearLayout>

            <!-- Estadio -->
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1.5"
                android:orientation="vertical"
                android:gravity="center">

                <ImageView
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:src="@android:drawable/ic_menu_mapmode"
                    android:tint="@color/colorAccent"
                    android:layout_marginBottom="4dp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/estadio_partido"
                    android:textColor="@color/colorAccent"
                    android:textSize="10sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/tv_estadio"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="AZTECA"
                    android:textColor="@color/colorWhite"
                    android:textSize="12sp"
                    android:gravity="center"
                    android:maxLines="2"
                    android:ellipsize="end" />

            </LinearLayout>

        </LinearLayout>

        <!-- Indicador de partido especial (opcional) -->
        <TextView
            android:id="@+id/tv_partido_especial"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="8dp"
            android:background="@color/colorAccent"
            android:paddingHorizontal="8dp"
            android:paddingVertical="4dp"
            android:text="@string/partido_reprogramado"
            android:textColor="@color/colorBlack"
            android:textSize="10sp"
            android:textStyle="bold"
            android:visibility="gone" />

        <!-- Sección de transmisiones en vivo -->
        <LinearLayout
            android:id="@+id/layout_streaming_links"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:background="@color/colorPrimaryDark"
            android:orientation="vertical"
            android:padding="12dp"
            android:visibility="gone">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="📺 Transmisiones Disponibles"
                android:textColor="@color/colorAccent"
                android:textSize="12sp"
                android:textStyle="bold"
                android:layout_marginBottom="8dp"
                android:gravity="center" />

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/recycler_streaming_links"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical" />

        </LinearLayout>

        <!-- Botón para agregar transmisión -->
        <Button
            android:id="@+id/btn_add_streaming"
            android:layout_width="match_parent"
            android:layout_height="36dp"
            android:layout_marginTop="8dp"
            android:background="@color/colorAccent"
            android:text="➕ Agregar Transmisión"
            android:textColor="@color/colorBlack"
            android:textSize="11sp"
            android:textStyle="bold"
            android:paddingHorizontal="8dp"
            android:elevation="2dp" />

    </LinearLayout>

</androidx.cardview.widget.CardView>