<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    android:id="@id/parent_view"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <LinearLayout
        android:orientation="vertical"
        android:id="@id/native_ad_view_container"
        android:visibility="gone"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content">
        <com.solodroid.ads.sdk.util.TemplateView
            android:id="@id/admob_native_ad_container"
            android:visibility="gone"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            app:gnt_template_type="@layout/gnt_admob_video_large_template_view" />
        <com.solodroid.ads.sdk.util.AdManagerTemplateView
            android:id="@id/google_ad_manager_native_ad_container"
            android:visibility="gone"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            app:gnt_template_type="@layout/gnt_ad_manager_video_large_template_view" />
        <com.facebook.ads.NativeAdLayout
            android:id="@id/fan_native_ad_container"
            android:visibility="gone"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content" />
        <include
            android:id="@id/startapp_native_ad_container"
            android:visibility="gone"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            layout="@layout/gnt_startapp_video_large_template_view" />
        <FrameLayout
            android:id="@id/applovin_native_ad_container"
            android:visibility="gone"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content" />
    </LinearLayout>
</RelativeLayout>