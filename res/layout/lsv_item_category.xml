<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:layout_margin="8.0dip"
    android:elevation="6.0dip"
    app:cardCornerRadius="16.0dip"
    app:cardBackgroundColor="@color/colorBackgroundDark"
    app:cardElevation="8.0dip"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">
<LinearLayout
    android:gravity="center_vertical"
    android:orientation="horizontal"
    android:id="@id/lyt_parent"
    android:background="?android:selectableItemBackground"
    android:paddingTop="12.0dip"
    android:paddingBottom="12.0dip"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:foreground="?selectableItemBackground"
    android:paddingStart="16.0dip"
    android:paddingEnd="16.0dip">
    <RelativeLayout
        android:layout_width="80.0dip"
        android:layout_height="80.0dip"
        android:background="@drawable/gradient_circle_background"
        android:elevation="4.0dip">
        <com.google.android.material.imageview.ShapeableImageView
            android:id="@id/category_image"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:scaleType="centerCrop"
            android:contentDescription="@string/img_content_description"
            android:layout_margin="4.0dip"
            app:shapeAppearanceOverlay="@style/ShapeAppearance.Image.RoundedCircle" />
    </RelativeLayout>
    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="8.0dip"
        android:layout_marginStart="8.0dip">
        <LinearLayout
            android:orientation="vertical"
            android:padding="8.0dip"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content">
            <TextView
                android:textAppearance="@style/Base.TextAppearance.AppCompat.Body1"
                android:textSize="18.0sp"
                android:textStyle="bold"
                android:id="@id/category_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Category"
                android:textColor="@color/colorAccent"
                android:maxLines="2"
                android:ellipsize="end" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="4.0dip"
                android:text="Información especializada sobre fútbol mexicano"
                android:textSize="13.0sp"
                android:textColor="@color/colorWhite"
                android:alpha="0.8"
                android:maxLines="1"
                android:ellipsize="end" />
            <LinearLayout
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="3.0dip" />
        </LinearLayout>
    </RelativeLayout>
</LinearLayout>
</androidx.cardview.widget.CardView>