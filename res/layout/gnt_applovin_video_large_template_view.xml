<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:orientation="vertical"
    android:id="@id/applovin_unit"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:card_view="http://schemas.android.com/apk/res-auto">
    <LinearLayout
        android:orientation="vertical"
        android:id="@id/applovin_native_background"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content">
        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content">
            <RelativeLayout
                android:layout_width="0.0dip"
                android:layout_height="0.0dip"
                card_view:layout_constraintDimensionRatio="H,2:1.1"
                card_view:layout_constraintLeft_toLeftOf="parent"
                card_view:layout_constraintRight_toRightOf="parent"
                card_view:layout_constraintTop_toTopOf="parent">
                <FrameLayout
                    android:id="@id/media_view_container"
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent" />
            </RelativeLayout>
        </androidx.constraintlayout.widget.ConstraintLayout>
        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8.0dip"
            android:layout_marginStart="10.0dip"
            android:layout_marginEnd="10.0dip">
            <androidx.cardview.widget.CardView
                android:layout_width="64.0dip"
                android:layout_height="64.0dip"
                android:layout_marginTop="3.0dip"
                card_view:cardCornerRadius="@dimen/corner_radius"
                card_view:cardElevation="0.0dip">
                <ImageView
                    android:id="@id/icon_image_view"
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:scaleType="centerCrop"
                    android:contentDescription="@string/img_content_description" />
            </androidx.cardview.widget.CardView>
            <LinearLayout
                android:orientation="vertical"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/item_post_padding_medium">
                <TextView
                    android:textAppearance="@style/Base.TextAppearance.AppCompat.Body2"
                    android:textSize="@dimen/video_primary_font_size"
                    android:textStyle="bold"
                    android:ellipsize="end"
                    android:gravity="start"
                    android:id="@id/title_text_view"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="2.0dip"
                    android:text=""
                    android:maxLines="2"
                    android:fontFamily="@font/custom_font" />
                <TextView
                    android:textSize="@dimen/video_secondary_font_size"
                    android:ellipsize="end"
                    android:id="@id/body_text_view"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="3.0dip"
                    android:text=""
                    android:maxLines="2"
                    android:fontFamily="@font/custom_font" />
                <RatingBar
                    android:textSize="@dimen/gnt_text_size_small"
                    android:textColor="@color/gnt_gray"
                    android:id="@id/rating_bar"
                    android:visibility="gone"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="3.0dip"
                    android:numStars="5"
                    android:rating="4.5"
                    style="?android:ratingBarStyleSmall" />
                <RelativeLayout
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="3.0dip">
                    <LinearLayout
                        android:orientation="horizontal"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginEnd="10.0dip"
                        android:layout_toStartOf="@id/ad_options_view">
                        <TextView
                            android:textSize="@dimen/gnt_ad_indicator_text_size"
                            android:textStyle="bold"
                            android:gravity="center"
                            android:id="@id/ad_notification_view"
                            android:background="@drawable/gnt_ad_icon"
                            android:paddingTop="2.0dip"
                            android:layout_width="@dimen/gnt_ad_indicator_width"
                            android:layout_height="@dimen/gnt_ad_indicator_height"
                            android:text="@string/txt_ad"
                            android:fontFamily="@font/custom_font" />
                        <TextView
                            android:ellipsize="end"
                            android:gravity="start"
                            android:id="@id/advertiser_textView"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="1.0dip"
                            android:text=""
                            android:maxLines="1"
                            android:fontFamily="@font/custom_font"
                            android:layout_marginStart="8.0dip" />
                    </LinearLayout>
                    <LinearLayout
                        android:orientation="vertical"
                        android:id="@id/ad_options_view"
                        android:layout_width="18.0dip"
                        android:layout_height="18.0dip"
                        android:layout_centerVertical="true"
                        android:layout_alignParentEnd="true" />
                </RelativeLayout>
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
    <Button
        android:textStyle="bold"
        android:textColor="@color/gnt_white"
        android:id="@id/cta_button"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="6.0dip"
        android:layout_marginBottom="7.0dip"
        android:fontFamily="@font/custom_font"
        android:layout_marginStart="10.0dip"
        android:layout_marginEnd="10.0dip" />
</LinearLayout>