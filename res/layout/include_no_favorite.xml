<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    xmlns:android="http://schemas.android.com/apk/res/android">
    <LinearLayout
        android:gravity="center"
        android:orientation="vertical"
        android:id="@id/lyt_no_favorite"
        android:visibility="visible"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true">
        <ImageView
            android:layout_width="100.0dip"
            android:layout_height="100.0dip"
            android:src="@drawable/ic_no_favorite"
            android:scaleType="centerCrop" />
        <TextView
            android:textAppearance="@style/Base.TextAppearance.AppCompat.Body2"
            android:textSize="@dimen/text_content_title_size"
            android:textStyle="bold"
            android:gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/whops" />
        <TextView
            android:textSize="@dimen/text_content_sub_title_size"
            android:gravity="center"
            android:id="@id/no_item_message"
            android:paddingLeft="30.0dip"
            android:paddingRight="30.0dip"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10.0dip"
            android:layout_marginTop="6.0dip"
            android:layout_marginRight="10.0dip"
            android:text="@string/no_favorite_found" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="50.0dip" />
    </LinearLayout>
</RelativeLayout>